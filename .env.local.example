# Firebase配置
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# 微信支付配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key

# 支付宝配置
ALIPAY_APP_ID=2021006122604702
ALIPAY_PRIVATE_KEY=你的应用私钥（从 密钥20251226120724/应用私钥RSA2048-敏感数据，请妥善保管.txt 复制）
ALIPAY_PUBLIC_KEY=支付宝公钥（从支付宝后台下载的支付宝公钥）

# 注意：
# 1. 私钥要去掉 -----BEGIN PRIVATE KEY----- 和 -----END PRIVATE KEY-----
# 2. 所有换行符替换成空格，变成一行
# 3. 部署到Vercel时，在项目设置 → Environment Variables 中添加这些变量
